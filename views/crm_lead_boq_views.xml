<odoo>
    <record id="view_tender_boq_line_kanban" model="ir.ui.view">
        <field name="name">tender.boq.line.kanban</field>
        <field name="model">tender.boq.line</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="item_code"/>
                <field name="description"/>
                <field name="quantity"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong>
                                <field name="name"/>
                                <br/>
                                <field name="item_code"/>
                            </strong>
                            <br/>
                            <field name="description"/>
                            <div>
                                <span style="margin-right: 16px;">Qty:
                                    <field name="quantity"/>
                                </span>
                                <span>Unit:
                                    <field name="unit"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- BOQ Lines Form View -->
    <record id="view_tender_boq_line_form" model="ir.ui.view">
        <field name="name">tender.boq.line.form</field>
        <field name="model">tender.boq.line</field>
        <field name="arch" type="xml">
            <form string="BOQ Line">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="lead_id" options="{'no_create': True}"/>
                        <field name="item_code"/>
                        <field name="description"/>
                        <field name="quantity"/>
                        <field name="unit"/>
                        <field name="rate"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- BOQ Lines list View -->
    <record id="view_tender_boq_line_list" model="ir.ui.view">
        <field name="name">tender.boq.line.list</field>
        <field name="model">tender.boq.line</field>
        <field name="arch" type="xml">
            <list >
                <field name="name"/>
                <field name="lead_id"/>
                <field name="item_code"/>
                <field name="description"/>
                <field name="quantity"/>
                <field name="unit"/>
                <field name="rate"/>
                <field name="amount"/>
            </list>
        </field>
    </record>


    <!-- Action window to open BOQ lines -->
    <!-- Action -->
    <record id="action_tender_boq_lines" model="ir.actions.act_window">
        <field name="name">BOQ Lines</field>
        <field name="res_model">tender.boq.line</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>



    <!-- Menu item for BOQ Lines -->
    <menuitem id="menu_tender_boq_lines" name="BOQ Lines" parent="menu_tender_bid_root"
              action="action_tender_boq_lines" sequence="20"/>
</odoo>
